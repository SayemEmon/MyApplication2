<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:hint="Log into Your Account"
        android:padding="15dp"
        android:textSize="25sp">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Email"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sayemeon55@gmail.com"
            android:textSize="25sp"
            android:inputType="textEmailAddress">

        </EditText>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Wrong Email"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#E73161">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Password"
            android:textSize="25sp">

        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="........."
            android:textSize="25sp"
            android:textStyle="bold"

            android:inputType="textEmailAddress">
    </EditText>
    </LinearLayout>
    </LinearLayout>


        <TextView

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="Log in"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textStyle=""
            android:textSize="25sp"
            android:background="#0058B3"
            android:padding="5dp">

        </TextView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="or sign up with social account"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:textSize="20sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:id="@+id/imageView2"
            android:layout_margin="20dp"
            android:background="#0000ff"
            android:layout_weight="1"

            app:srcCompat="@mipmap/facebook"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="#74D7FC"
            android:layout_weight="1"

            app:srcCompat="@mipmap/twitter">
        </ImageView>


    </LinearLayout>




</LinearLayout>










